{
  "compilerOptions": {
    "declaration": true,

//    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,


    "target": "esNext",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "rootDir": "src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
